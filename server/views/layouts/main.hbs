<!DOCTYPE html>
<html ng-app="{{appName}}" ng-controller="{{rootController}}">
<head>
  <meta charset="UTF-8">
  <title ng-bind="pageTitle">{{title}}</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,700&subset=latin,vietnamese' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/static/css/bootstrap.css">
  <link rel="stylesheet" href="/static/css/font-awesome.css">
  <link rel="stylesheet" href="/static/css/core.css">
  {{#each links}}
    <link rel="{{rel}}" href="{{href}}" type="{{type}}">
  {{/each}}
</head>
<body>
  {{{body}}}

  {{#each scripts}}
    <script type="text/javascript" src="{{src}}"></script>
  {{/each}}
</body>
</html>
